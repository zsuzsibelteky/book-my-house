<h1>Book the house!</h1>

<%= form_for @booking do |f| %>
  <% if @booking.errors.any? %>
    <% @booking.errors.full_messages.each do |msg| %>
      <p class='error'><%= msg %></p>
    <% end %>
  <% end %>
  <p>
    <%= f.label :day, 'Day of booking:' %>
    <%= f.date_select :day %>
  </p>
  <p>
    <%= f.label :house, 'Select a place:' %>
    <%= f.select :house_id, options_from_collection_for_select(House.ordered, :id, :name), include_blank: true %>
  </p>
  <p>
    <%= f.label :numberOfGuests, 'Add the number of guests:' %>
    <%= f.number_field :number_of_guests %>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to 'Back', bookings_path %></p>
